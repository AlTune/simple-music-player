<Controls:MetroWindow x:Class="SimpleMusicPlayer.Views.MainWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
                      xmlns:ViewModels="clr-namespace:SimpleMusicPlayer.ViewModels"
                      xmlns:Views="clr-namespace:SimpleMusicPlayer.Views"
                      xmlns:ValueConverters="clr-namespace:SimpleMusicPlayer.ValueConverters"
                      xmlns:PresentationOptions="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
                      xmlns:core="clr-namespace:SimpleMusicPlayer.Core"
                      xmlns:player="clr-namespace:SimpleMusicPlayer.Core.Player"
                      Title="Simple Music Player"
                      TitleTemplate="{StaticResource WindowTitleDataTemplate}"
                      ShowTitleBar="True"
                      ShowIconOnTitleBar="True"
                      BorderBrush="Black"
                      BorderThickness="1"
                      Height="600"
                      Width="400"
                      MinHeight="400"
                      MinWidth="400"
                      WindowStartupLocation="CenterScreen"
                      WindowPlacementSettings="{Binding CustomWindowPlacementSettings, Mode=OneTime}"
                      SaveWindowPosition="True"
                      mc:Ignorable="d"
                      d:DataContext="{d:DesignInstance ViewModels:MainViewModel}">

    <Controls:MetroWindow.Resources>
        <ValueConverters:NullToCollapsedVisibilityConverter x:Key="NullToCollapsedVisibilityConverter" />
    </Controls:MetroWindow.Resources>

    <Controls:MetroWindow.RightWindowCommands>
        <Controls:WindowCommands>
            <Button ToolTip="Simple Music Player on GitHub"
                    Command="{Binding ShowOnGitHubCmd}">
                <Rectangle Width="20"
                           Height="20">
                    <Rectangle.Fill>
                        <VisualBrush Stretch="Fill"
                                     Visual="{StaticResource appbar_github}" />
                    </Rectangle.Fill>
                </Rectangle>
            </Button>
        </Controls:WindowCommands>
    </Controls:MetroWindow.RightWindowCommands>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Views:PlayControlInfoView Grid.Row="0"
                                   DataContext="{Binding PlayControlInfoViewModel, Mode=OneTime}" />

        <Views:PlayListsView Grid.Row="1"
                             DataContext="{Binding PlayListsViewModel, Mode=OneTime}"
                             Margin="5,10,5,5" />

        <StackPanel Grid.Row="2"
                    DataContext="{Binding PlayListsViewModel.FileSearchWorker, Mode=OneWay}"
                    Visibility="{Binding IsWorking, Mode=OneWay, Converter={x:Static ValueConverters:FalseToCollapsedVisibilityConverter.Instance}}"
                    Orientation="Horizontal">
            <core:SprocketControl VerticalAlignment="Center"
                                      Width="25"
                                      Height="25"
                                      TickWidth="2"
                                      TickColor="{DynamicResource AccentColor}"
                                      IsIndeterminate="True" />
            <TextBlock VerticalAlignment="Center"
                       Text="Search for Files..." />
            <Grid>
                <Grid.Resources>
                    <ResourceDictionary>
                        <ResourceDictionary.MergedDictionaries>
                            <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/VS/Colors.xaml" />
                            <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/VS/Styles.xaml" />
                        </ResourceDictionary.MergedDictionaries>
                    </ResourceDictionary>
                </Grid.Resources>
                <Button VerticalAlignment="Center"
                        Margin="5,0,0,0"
                        Content="Cancel"
                        Style="{StaticResource LinkButton}"
                        Command="{Binding StopSearchCmd, Mode=OneWay}" />
            </Grid>
        </StackPanel>

        <!-- equalizer view -->
        <Grid DataContext="{Binding EqualizerViewModel, Mode=OneWay}"
              Visibility="{Binding RelativeSource={RelativeSource Self}, Path=DataContext, Converter={StaticResource NullToCollapsedVisibilityConverter}, Mode=OneWay}"
              Grid.Row="0"
              Grid.RowSpan="3">
            <Grid.Background>
                <SolidColorBrush Color="{DynamicResource Gray2}"
                                 Opacity="0.8" />
            </Grid.Background>

            <Grid UseLayoutRounding="True"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Center">

                <Grid.Effect>
                    <DropShadowEffect ShadowDepth="0"
                                      Color="Black"
                                      BlurRadius="20"
                                      PresentationOptions:Freeze="true" />
                </Grid.Effect>

                <Grid Background="{DynamicResource WhiteColorBrush}">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Height="30"
                               Text="EQUALIZER"
                               TextAlignment="Left"
                               TextTrimming="CharacterEllipsis"
                               VerticalAlignment="Center"
                               Padding="4"
                               FontSize="16"
                               FontFamily="{DynamicResource HeaderFontFamily}"
                               Foreground="White">
                        <TextBlock.Background>
                            <SolidColorBrush Color="{DynamicResource AccentColor}" />
                        </TextBlock.Background>
                    </TextBlock>

                    <Grid Grid.Row="1"
                          Margin="4,0,4,4">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Controls:ToggleSwitch Grid.Column="0"
                                               HorizontalAlignment="Left"
                                               Margin="0,0,0,4"
                                               MinWidth="120"
                                               OnLabel="On"
                                               OffLabel="Off"
                                               IsChecked="{Binding Equalizer.IsEnabled}" />

                        <ItemsControl Grid.Row="1"
                                      ItemsSource="{Binding Equalizer.Bands, Mode=OneWay}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <VirtualizingStackPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="{x:Type player:EqualizerBand}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Slider Grid.Row="0"
                                                Orientation="Vertical"
                                                Margin="4"
                                                Height="150"
                                                Minimum="-10"
                                                Maximum="10"
                                                TickFrequency="2"
                                                LargeChange="1"
                                                SmallChange="0.1"
                                                TickPlacement="BottomRight"
                                                Value="{Binding Gain}"
                                                IsEnabled="{Binding IsActive, Mode=OneWay}" />
                                        <TextBlock Grid.Row="1"
                                                   Margin="4"
                                                   Text="{Binding BandCaption}" />
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <UniformGrid Grid.Row="2"
                                     Columns="2">
                            <Button Content="_Default"
                                    Margin="0,0,2,0"
                                    Command="{Binding SetToDefaultCommand, Mode=OneWay}" />
                            <Button Content="_Close"
                                    Margin="2,0,0,0"
                                    Command="{Binding RelativeSource={RelativeSource AncestorType=Views:MainWindow}, Path=DataContext.CloseEqualizerCommand, Mode=OneWay}" />
                        </UniformGrid>
                    </Grid>

                </Grid>
            </Grid>
        </Grid>

    </Grid>
</Controls:MetroWindow>